<h1>Create a new figure</h1>
<form action="/figures" method="post">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name" ><br></br>

  <label><h3>Titles</h3></label><br>
  <%Title.all.each do |title|%>
  <label><%=title.name%></label>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" ><br>
  <%end%>
  <br></br>

  <label><h4>Create a New Title:</h4></label>
  <input type="text" name="title[name]" id="new_title" ><br>
  <br>

  <label><h3>Landmarks</h3></label><br>

  <%Landmark.all.each do |landmark|%>
  <label><%=landmark.name%></label>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><br>
  <%end%>

  <br></br>
  <label><h4>Create a New Landmark</h4></label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <br></br>
  <label><h3>Year Created</h3></label><br>
  <input type="text" name="landmark[year_completed]" >
  <br></br>
  <input type="submit" value="Create New Figure">
</form>
